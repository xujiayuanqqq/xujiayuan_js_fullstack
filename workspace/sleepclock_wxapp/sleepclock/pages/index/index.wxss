/**index.wxss**/
.container {
  overflow: hidden;
  width: 100%;
  height: 100vh;
  background-image: linear-gradient(90deg,#8146b4 0%,#6990f6 100%);
  animation: gradientChange 2s infinite;
}
@keyframes gradientChange {
  100% {
    background: linear-gradient(90deg,hsl(0, 88%, 75%) 0%, #6f27b0 100%);
  }
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.td-cube {
  width: 150px;
  height: 150px;
  -webkit-perspective: 1000px;
  perspective: 1000px;
}
.td-list {
  position: relative;
  width: 100%;
  height: 100%;
  -webkit-transform: rotateX(-15deg) rotateY(15deg);
  transform: rotateX(-15deg) rotateY(15deg);
  -webkit-transform-style: preserve-3d;
  transform-style: preserve-3d;
  -webkit-animation: rotate 5s infinite linear;
  animation: rotate 5s infinite linear;
}
.front, .back, .top, .bottom, .left, .right {
  display: flex;
  position: absolute;
  justify-content: center;
  align-items: center;
  width: 150px;
  height: 150px;
  opacity: .8;
  font-size: 50px;
  color: #fff;
}
.front {
  background-color: #f66;
  -webkit-transform: translateZ(75px);
  transform: translateZ(75px);
}

.back {
  background-color: #66f;
  -webkit-transform: rotateY(180deg) translateZ(75px);
  transform: rotateY(180deg) translateZ(75px);
}

.top {
  background-color: #f90;
  -webkit-transform: rotateX(90deg) translateZ(75px);
  transform: rotateX(90deg) translateZ(75px);
}

.bottom {
  background-color: #09f;
  -webkit-transform: rotateX(-90deg) translateZ(75px);
  transform: rotateX(-90deg) translateZ(75px);
}

.left {
  background-color: #9c3;
  -webkit-transform: rotateY(-90deg) translateZ(75px);
  transform: rotateY(-90deg) translateZ(75px);
}

.right {
  background-color: #3c9;
  -webkit-transform: rotateY(90deg) translateZ(75px);
  transform: rotateY(90deg) translateZ(75px);
}
@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotateY(0) rotateX(0);
    transform: rotateY(0) rotateX(0);
  }
  to {
    -webkit-transform: rotateY(-1turn) rotateX(-1turn);
    transform: rotateY(-1turn) rotateX(-1turn);
  }
}
@keyframes rotate {
  from {
    -webkit-transform: rotateY(0) rotateX(0);
    transform: rotateY(0) rotateX(0);
  }
  to {
    -webkit-transform: rotateY(-1turn) rotateX(-1turn);
    transform: rotateY(-1turn) rotateX(-1turn);
  }
}
.user-motto {
  background-image: -webkit-linear-gradient(left, #2d8cf0, #fff 25%, #2d8cf0 50%, #fff 75%, #2d8cf0);
  -webkit-text-fill-color: transparent;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-background-size: 200% 100%;
  background-size: 200% 100%;
  -webkit-animation: masked-animation 2s infinite linear;
  animation: masked-animation 2s infinite linear;
}
@keyframes masked-animation {
  0% {
      background-position: 0 0;
  }

  100% {
      background-position: -100% 0;
  }
}
.punch {
  display: flex;
  width: 50px;
  height: 50px;
  justify-content: center;
  align-items: center;
}
.click {
  width: 100%;
  height: 100%;
}